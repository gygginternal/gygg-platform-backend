NODE_ENV=development
PORT=5000
DATABASE_URL=mongodb://localhost:27017/gig-platform?replicaSet=rs0
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7
FRONTEND_URL=http://localhost:3000

# Stripe Configuration (Use test keys for development)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Nuvei Configuration (Use test keys for development)
NUVEI_API_KEY=your_nuvei_api_key_here
NUVEI_MERCHANT_ID=your_nuvei_merchant_id_here
NUVEI_MERCHANT_SITE_ID=your_nuvei_merchant_site_id_here
NUVEI_API_URL=https://api.nuvei.com/
NUVEI_SANDBOX_URL=https://sandbox.nuvei.com/
NUVEI_WEBHOOK_SECRET=your_nuvei_webhook_secret_here

# Platform Fees and Tax Configuration
PLATFORM_FIXED_FEE_CENTS=500
PLATFORM_FEE_PERCENT=0.10
TAX_PERCENT=0.13

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM="Your App Name <your-email@gmail.com>"

# Valkey Configuration (API compatible with Redis)
VALKEY_HOST=localhost
VALKEY_PORT=6380  # Valkey running in Docker container on port 6380
VALKEY_TTL=300
VALKEY_USER_TTL=600
# Redis variables now point to Valkey for compatibility
# All Redis commands will be handled by Valkey
REDIS_HOST=$VALKEY_HOST
REDIS_PORT=$VALKEY_PORT
REDIS_TTL=$VALKEY_TTL
REDIS_USER_TTL=$VALKEY_USER_TTL

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-2
AWS_S3_BUCKET_NAME=your-s3-bucket-name

# Admin Configuration
ADMIN_USER_ID=your-admin-user-mongodb-id